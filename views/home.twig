{% extends 'layout.twig' %}

{% block body %}
<script
  src="https://code.jquery.com/jquery-3.6.1.min.js"
  integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
  crossorigin="anonymous"></script>
  <script src="https://cdn.socket.io/3.1.3/socket.io.min.js" integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh" crossorigin="anonymous"></script>
  
	<h1 style="text-align:center;">Gestion Users - Examen Node JS</h1>
    <hr/>
	<form method="post" action="http://localhost:3000/users/addUser">
		<table style="margin:auto;">
			<tr>
				<td>
					<label>Username</label>
				</td>
				<td>
					<input type="text" name="username"/><br>
				</td>
			</tr>
			<tr>
				<td>
					<label>Email</label>
				</td>
				<td>
					<input type="text" name="email"/><br>
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<button type="submit">Ajouter</button>
				</td>
			</tr>
		</table>
	</form>

	<table border="1" style="margin:auto;">
        <tr>
            <td colspan="2">
                <a href="#">GÃ©rer user</a>
            </td>
        </tr>
        <tr>
            <td>Username</td>
            <td>Email</td>
            <td>Action</td>
        </tr>
        {% for user in users %}
        <tr>
            <td>{{user.username}}</td>
            <td>{{user.email}}</td>
            <td>
            <button onclick="sendNotification()"><a href="http://localhost:3000/users/deleteUser/{{user._id}}">Supprimer</a></button>
        </tr>
        {% endfor %}
    </table>
    <script>
       function sendNotification(){
        var socket = io('http://localhost:3000');
        var notification = "user deleted successfully";
        socket.emit('notification', notification);
    }
       
    </script>
{% endblock %}
